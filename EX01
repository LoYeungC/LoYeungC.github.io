let a = 0
let b = 0
let c = 0
input.onButtonPressed(Button.A, function () {
    a = Math.randomRange(1, 10000)
    b = a % 10
    c = a
    while (c > 10) {
        c = Math.floor(c / 10)
    }
    basic.showNumber(a)
    basic.showNumber(b)
    basic.showNumber(c)
})
basic.forever(function () {

})
